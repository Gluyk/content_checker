{% extends 'base.html.twig' %}

{% block title %}Results index{% endblock %}

{% block body %}
    <h1>Results index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>Date</th>
                <th>Row</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.body }}</td>
                <td>{{ result.date ? result.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ result.row }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
